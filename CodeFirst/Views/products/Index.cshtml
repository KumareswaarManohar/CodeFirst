@model IEnumerable<CodeFirst.Models.product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPurchase_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPurchase_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.product_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.product_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.product_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
